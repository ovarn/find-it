{
	"name": "Find it!",
	"description": "Handy context menu search.",
	"version": "1.1.1",
	"manifest_version": 3,
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"permissions": [
		"contextMenus",
		"storage"
	],
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "/images/icon16.png",
			"32": "/images/icon32.png",
			"64": "/images/icon64.png",
			"128": "/images/icon128.png"
		}
	},
	"icons": {
		"16": "/images/icon16.png",
		"32": "/images/icon32.png",
		"64": "/images/icon64.png",
		"128": "/images/icon128.png"
	}
}
